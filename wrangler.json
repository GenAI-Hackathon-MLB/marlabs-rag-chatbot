{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "worker-cron-hono",
  "main": "src/index.ts",
  "compatibility_date": "2025-01-29",
  "observability": {
    "enabled": true
  },
  "env": {
    "dev": {
      "name": "worker-cron-hono-dev",
      "vars": {
        "ENVIRONMENT": "dev",
        "EMBEDDING_MODEL": "@cf/baai/bge-base-en-v1.5",
        "LLM_MODEL": "llama3-8b-8192"
      },
      "triggers": {
        "crons": ["* * * * *"]
      },
      "ai": {
        "binding": "AI"
      },
      "vectorize": [
        {
          "binding": "VECTORIZE",
          "index_name": "test-embeddings-index"
        }
      ]
    },
    "staging": {
      "name": "worker-cron-hono-staging",
      "vars": {
        "ENVIRONMENT": "staging"
      },
      "triggers": {
        "crons": ["0 * * * *"]
      }
    },
    "production": {
      "name": "worker-cron-hono-production",
      "vars": {
        "ENVIRONMENT": "production"
      },
      "triggers": {
        "crons": ["0 0 1 * *"]
      }
    }
  }
}
